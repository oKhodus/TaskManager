<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Button Style -->
    <Style Selector="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryButtonBgBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ButtonTextBrush}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style Selector="Button:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource PrimaryButtonHoverBrush}"/>
    </Style>

    <Style Selector="Button:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource PrimaryButtonBgBrush}"/>
    </Style>

    <!-- Secondary Button Style (using Classes) -->
    <Style Selector="Button.secondary">
        <Setter Property="Background" Value="{StaticResource SecondaryButtonBgBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style Selector="Button.secondary:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource SecondaryButtonHoverBrush}"/>
    </Style>

    <Style Selector="Button.secondary:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource SecondaryButtonBgBrush}"/>
    </Style>
</Styles>
