<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Color Resources - Based on Reference Project Theme -->
    <Style>
        <Style.Resources>
            <!-- Background Colors (Dark Theme from Reference) -->
            <Color x:Key="PrimaryBg">#0f1217</Color>
            <Color x:Key="SecondaryBg">#151922</Color>
            <Color x:Key="CardBg">#1a1f2b</Color>

            <!-- Input Colors -->
            <Color x:Key="InputBg">#1a1f2b</Color>
            <Color x:Key="BorderDefault">#222833</Color>
            <Color x:Key="BorderFocused">#6ea8ff</Color>

            <!-- Text Colors -->
            <Color x:Key="HeadingText">#f9fafb</Color>
            <Color x:Key="LabelText">#9aa4b2</Color>
            <Color x:Key="InputText">#e5e7eb</Color>

            <!-- Priority Colors (from Reference) -->
            <Color x:Key="PriorityUrgent">#f87171</Color>
            <Color x:Key="PriorityHigh">#facc15</Color>
            <Color x:Key="PriorityNormal">#4ade80</Color>

            <!-- Button Colors -->
            <Color x:Key="PrimaryButtonBg">#6ea8ff</Color>
            <Color x:Key="PrimaryButtonHover">#8bb9ff</Color>
            <Color x:Key="SecondaryButtonBg">#151922</Color>
            <Color x:Key="SecondaryButtonHover">#1a1f2b</Color>
            <Color x:Key="ButtonText">#FFFFFF</Color>

            <!-- Tab Colors -->
            <Color x:Key="TabActive">#6ea8ff</Color>
            <Color x:Key="TabInactive">#9aa4b2</Color>

            <!-- Solid Color Brushes -->
            <SolidColorBrush x:Key="PrimaryBgBrush" Color="{StaticResource PrimaryBg}"/>
            <SolidColorBrush x:Key="SecondaryBgBrush" Color="{StaticResource SecondaryBg}"/>
            <SolidColorBrush x:Key="CardBgBrush" Color="{StaticResource CardBg}"/>

            <SolidColorBrush x:Key="InputBgBrush" Color="{StaticResource InputBg}"/>
            <SolidColorBrush x:Key="BorderDefaultBrush" Color="{StaticResource BorderDefault}"/>
            <SolidColorBrush x:Key="BorderFocusedBrush" Color="{StaticResource BorderFocused}"/>

            <SolidColorBrush x:Key="HeadingTextBrush" Color="{StaticResource HeadingText}"/>
            <SolidColorBrush x:Key="LabelTextBrush" Color="{StaticResource LabelText}"/>
            <SolidColorBrush x:Key="InputTextBrush" Color="{StaticResource InputText}"/>

            <SolidColorBrush x:Key="PriorityUrgentBrush" Color="{StaticResource PriorityUrgent}"/>
            <SolidColorBrush x:Key="PriorityHighBrush" Color="{StaticResource PriorityHigh}"/>
            <SolidColorBrush x:Key="PriorityNormalBrush" Color="{StaticResource PriorityNormal}"/>

            <SolidColorBrush x:Key="PrimaryButtonBgBrush" Color="{StaticResource PrimaryButtonBg}"/>
            <SolidColorBrush x:Key="PrimaryButtonHoverBrush" Color="{StaticResource PrimaryButtonHover}"/>
            <SolidColorBrush x:Key="SecondaryButtonBgBrush" Color="{StaticResource SecondaryButtonBg}"/>
            <SolidColorBrush x:Key="SecondaryButtonHoverBrush" Color="{StaticResource SecondaryButtonHover}"/>
            <SolidColorBrush x:Key="ButtonTextBrush" Color="{StaticResource ButtonText}"/>

            <SolidColorBrush x:Key="TabActiveBrush" Color="{StaticResource TabActive}"/>
            <SolidColorBrush x:Key="TabInactiveBrush" Color="{StaticResource TabInactive}"/>
        </Style.Resources>
    </Style>
</Styles>
